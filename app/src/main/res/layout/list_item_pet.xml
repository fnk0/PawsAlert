<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/petImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/grey_white_1000"
            android:scaleType="centerCrop"
            android:layout_marginBottom="4dp"
            tools:src="@drawable/cat" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/petType"
            android:src="@drawable/ic_cat"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/petName"
            android:layout_margin="16dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/petGender"
                android:src="@drawable/ic_male"
                android:layout_below="@id/petImage"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/petName"
            android:layout_below="@id/petImage"
            android:layout_toRightOf="@id/petGender"
            android:layout_toEndOf="@id/petGender"
            android:layout_alignBaseline="@id/petGender"
            android:padding="8dp"
            tools:text="Gandalf"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:background="@color/grey_400"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/actionFavorite"
                android:src="@drawable/ic_action_favorite_outline"
                android:layout_width="42dp"
                android:layout_height="42dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/actionShare"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_social_share"
                android:layout_width="42dp"
                android:layout_height="42dp" />

            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnMore"
                android:text="@string/more_info"
                android:textSize="18sp"
                android:textColor="@color/primary_dark"
                android:background="?android:selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>