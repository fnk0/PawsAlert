<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/petGender"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_male"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/petName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="22sp"
                tools:text="Gandalf"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/petDate"
                tools:text="Mar 26, 2016"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/petImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/grey_white_1000"
            android:scaleType="centerCrop"
            android:transitionName="@string/petImage"
            tools:src="@drawable/cat"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/actionCall"
                android:layout_width="48dp"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:tint="@color/primary"
                android:src="@drawable/ic_call"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/actionShare"
                android:layout_width="48dp"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_social_share"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/more_info"
                android:textColor="@color/primary_dark"
                android:textSize="18sp"
                />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>